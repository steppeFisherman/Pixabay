<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_fragment_nav_graph"
    app:startDestination="@id/feelingsFragment">

    <fragment
        android:id="@+id/feelingsFragment"
        android:name="com.example.pixabay.ui.screens.category.FeelingsFragment"
        android:label="FeelingsFragment"
        tools:layout="@layout/fragment_feelings" >
        <action
            android:id="@+id/action_feelingsFragment_to_feelingsDetailsFragment"
            app:destination="@id/feelingsDetailsFragment"
            app:popUpTo="@id/feelingsDetailsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/musicFragment"
        android:name="com.example.pixabay.ui.screens.category.MusicFragment"
        android:label="MusicFragment"
        tools:layout="@layout/fragment_music" >
        <action
            android:id="@+id/action_musicFragment_to_musicDetailsFragment"
            app:destination="@id/musicDetailsFragment"
            app:popUpTo="@id/musicDetailsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/sportsFragment"
        android:name="com.example.pixabay.ui.screens.category.SportsFragment"
        android:label="SportsFragment"
        tools:layout="@layout/fragment_sports" >
        <action
            android:id="@+id/action_sportsFragment_to_sportDetailsFragment"
            app:destination="@id/sportDetailsFragment"
            app:popUpTo="@id/sportDetailsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/animalsFragment"
        android:name="com.example.pixabay.ui.screens.category.AnimalsFragment"
        android:label="AnimalsFragment"
        tools:layout="@layout/fragment_animals" >
        <action
            android:id="@+id/action_animalsFragment_to_animalsDetailsFragment"
            app:destination="@id/animalsDetailsFragment"
            app:popUpTo="@id/animalsDetailsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/scienceFragment"
        android:name="com.example.pixabay.ui.screens.category.ScienceFragment"
        android:label="ScienceFragment"
        tools:layout="@layout/fragment_science" >
        <action
            android:id="@+id/action_scienceFragment_to_scienceDetailsFragment"
            app:destination="@id/scienceDetailsFragment"
            app:popUpTo="@id/scienceDetailsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/industryFragment"
        android:name="com.example.pixabay.ui.screens.category.IndustryFragment"
        android:label="IndustryFragment"
        tools:layout="@layout/fragment_industry" >
        <action
            android:id="@+id/action_industryFragment_to_industryDetailsFragment"
            app:destination="@id/industryDetailsFragment"
            app:popUpTo="@id/industryDetailsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <action
        android:id="@+id/action_global_feelingsFragment"
        app:destination="@id/feelingsFragment"
        app:popUpTo="@id/main_fragment_nav_graph"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_musicFragment"
        app:destination="@id/musicFragment"
        app:popUpTo="@id/main_fragment_nav_graph"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_sportsFragment"
        app:destination="@id/sportsFragment"
        app:popUpTo="@id/main_fragment_nav_graph"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_animalsFragment"
        app:destination="@id/animalsFragment"
        app:popUpTo="@id/main_fragment_nav_graph"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_scienceFragment"
        app:destination="@id/scienceFragment"
        app:popUpTo="@id/main_fragment_nav_graph" />
    <action
        android:id="@+id/action_global_industryFragment"
        app:destination="@id/industryFragment"
        app:popUpTo="@id/main_fragment_nav_graph"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/feelingsDetailsFragment"
        android:name="com.example.pixabay.ui.screens.details.FeelingsDetailsFragment"
        android:label="fragment_feelings_details"
        tools:layout="@layout/fragment_feelings_details" >

    </fragment>
    <fragment
        android:id="@+id/musicDetailsFragment"
        android:name="com.example.pixabay.ui.screens.details.MusicDetailsFragment"
        android:label="fragment_music_details"
        tools:layout="@layout/fragment_music_details" />
    <fragment
        android:id="@+id/sportDetailsFragment"
        android:name="com.example.pixabay.ui.screens.details.SportDetailsFragment"
        android:label="fragment_sport_details"
        tools:layout="@layout/fragment_sport_details" />
    <fragment
        android:id="@+id/animalsDetailsFragment"
        android:name="com.example.pixabay.ui.screens.details.AnimalsDetailsFragment"
        android:label="fragment_animals_details"
        tools:layout="@layout/fragment_animals_details" />
    <fragment
        android:id="@+id/scienceDetailsFragment"
        android:name="com.example.pixabay.ui.screens.details.ScienceDetailsFragment"
        android:label="fragment_science_details"
        tools:layout="@layout/fragment_science_details" />
    <fragment
        android:id="@+id/industryDetailsFragment"
        android:name="com.example.pixabay.ui.screens.details.IndustryDetailsFragment"
        android:label="fragment_industry_details"
        tools:layout="@layout/fragment_industry_details" />
</navigation>